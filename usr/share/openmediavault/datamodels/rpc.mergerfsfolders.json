[{
	"type": "rpc",
	"id": "rpc.mergerfsfolders.set",
	"params": {
		"type": "object",
		"properties": {
			"uuid": {
				"type": "string",
				"format": "uuidv4",
				"required": true
			},
			"name": {
				"type": "string",
				"required": true
			},
			"mntentref": {
				"type": "string",
				"format": "uuidv4",
				"required": true
			},
			"paths": {
				"type": "string",
				"required": true
			},
			"create_policy": {
				"type": "string",
				"enum": [
					"all", "epall", "epff",
					"eplfs", "eplus", "epmfs",
					"eprand", "erofs", "ff",
					"lfs", "lus", "mfs",
					"newest", "rand"
				]
			},
			"min_free_space": {
				"type": "string",
				"format": "regex",
				"pattern": "^[0-9]+[KMG]$"
			},
			"options": {
				"type": "string"
			},
			"xsystemd": {
				"type": "boolean"
			}
		}
	}
}]
